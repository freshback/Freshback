Author:
<%= link_to user_path(comment.user.id) do %><br>
<%= comment.user.nickname%><br>
<%= image_tag comment.user.avatar.url, style:"width:100px;"%><br>
<%end%>
<%=comment.text%><br>
Created:
<%= comment.created_at.to_date.strftime("%d %B, %Y") %><hr>

<% if user_signed_in? && comment.user.id == current_user.id %>
  <%= link_to "delete", comment_path(comment.id), method: :delete %>
<% end%>
