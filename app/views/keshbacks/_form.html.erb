<% if @keshback.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@keshback.errors.count, "error") %>
      prohibited this keshback from being saved:</h2>

    <ul>
      <% @keshback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
